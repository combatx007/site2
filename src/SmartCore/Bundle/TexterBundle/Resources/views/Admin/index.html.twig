{% block html_head_title %}Текстер / {{ parent() }}{% endblock html_head_title %}


{% block content %}
    <ul class="nav nav-tabs" id="myTab">
        {#<li class="active"><a>Список всех групп меню</a></li>#}
        {#<li><a href="#create">Создать новую группу</a></li>#}
    </ul>

<div class="tab-content">
    <div class="tab-pane active" id="all">
        <table class="table table-bordered table-hover">
            <thead><tr>
                <th>id</th>
                <th>{{ 'Text'|trans }}</th>
            </tr></thead>
            <tbody>
            {% for item in items %}
                <tr>
                    <td><a href="{{ path('cmf_admin_module_manage', {'module': 'Texter', 'slug': item.id}) }}">{{ item.id }}</a></td>
                    <td><a href="{{ path('cmf_admin_module_manage', {'module': 'Texter', 'slug': item.id}) }}">{{ item.announce }}</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
    {#<div class="tab-pane" id="create">    </div>#}
</div>

